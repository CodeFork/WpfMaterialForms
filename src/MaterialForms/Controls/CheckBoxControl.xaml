<UserControl x:Class="MaterialForms.Controls.CheckBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Schema="clr-namespace:MaterialForms.Schema"
             xmlns:Validation="clr-namespace:MaterialForms.Validation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:launcher="clr-namespace:MaterialForms"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="32"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <Schema:BooleanSchemaViewModel />
    </UserControl.DataContext>
    <Grid>
        <CheckBox x:Name="ValueHolderControl"
                  Grid.Column="1"
                  VerticalAlignment="Center"
                  VerticalContentAlignment="Center"
                  Content="{Binding Hint}"
                  FontSize="15"
                  IsChecked="{Binding Value}"
                  Padding="8,0,0,0"
                  Style="{StaticResource MaterialDesignCheckBox}"
                  ToolTip="{Binding ToolTip}" />
    </Grid>
</UserControl>
