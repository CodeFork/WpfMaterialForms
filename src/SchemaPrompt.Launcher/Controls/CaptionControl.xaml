<UserControl x:Class="SchemaPrompt.Launcher.Controls.CaptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Schema="clr-namespace:SchemaPrompt.Launcher.Schema"
             xmlns:Validation="clr-namespace:SchemaPrompt.Launcher.Validation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:launcher="clr-namespace:SchemaPrompt.Launcher"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="32"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.DataContext>
        Media Volume
    </UserControl.DataContext>
    <Grid>
        <TextBlock Margin="0"
                   VerticalAlignment="Center"
                   Foreground="{StaticResource PrimaryHueMidBrush}"
                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                   Text="{Binding Mode=OneWay}" />
    </Grid>
</UserControl>
